<div class="stepper @OrientationCss">
    <CascadingValue Value="this">
        @ChildContent
    </CascadingValue>
</div>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public LayoutOrientation Orientation { get; set; }

    private string OrientationCss
    {
        get
        {
            return Orientation switch
            {
                LayoutOrientation.Horizontal => "stepper-horizontal",
                LayoutOrientation.Vertical => "stepper-vertical",
                _ => throw new InvalidOperationException($"Invalid {nameof(Orientation)} value.")
            };
        }
    }
}
