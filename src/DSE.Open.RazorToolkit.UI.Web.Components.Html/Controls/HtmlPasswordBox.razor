@inherits HtmlLabelledInputControl<string>

<HtmlBlock class="@ComponentClass" style="@ComponentStyle" lang="@Language">
    @if (Header is not null)
    {
        @Header
    }
    else if (!string.IsNullOrWhiteSpace(HeaderText))
    {
        <HtmlLabel ForId="@InputId" Text="@HeaderText" CssClass="password-box-header"></HtmlLabel>
    }

    <HtmlInputPassword Value="@CurrentValue"
                       ValueExpression="@ValueExpression"
                       ValueChanged="@ValueChanged"
                       Id="@InputId"
                       Name="@Name"
                       MaxLength="@MaxLength"
                       MinLength="@MinLength"
                       CssClass="password-box-input"
                       ReadOnly="@ReadOnly"
                       Disabled="@Disabled"
                       Required="@Required"/>

    @if (Description is not null)
    {
        @Description
    }
    else if (!string.IsNullOrWhiteSpace(DescriptionText))
    {
        <HtmlBlock CssClass="password-box-description">@DescriptionText</HtmlBlock>
    }

    @if (ValidationFor is not null)
    {
        <HtmlBlock CssClass="password-box-validation">
            <ValidationMessage For="@ValidationFor"/>
        </HtmlBlock>
    }
</HtmlBlock>
