@page "/html/controls/datepicker"

<h1>Html DateTime Picker</h1>

<h2 class="h5 mt-4">This example is a local DateTime</h2>

<HtmlDateTimePicker DateType="HtmlInputDateType.DateTimeLocal" HeaderText="Label here" DescriptionText="Some more detailed information below!" @bind-Value="@_dateTimeValue"></HtmlDateTimePicker>

<p class="mt-3">The current value is: <code>@_dateTimeValue</code></p>

<h2 class="h5 mt-4">This example is a Date</h2>

<HtmlDateTimePicker DateType="HtmlInputDateType.Date" HeaderText="Label here" DescriptionText="Some more detailed information below!" @bind-Value="@_dateValue"></HtmlDateTimePicker>

<p class="mt-3">The current value is: <code>@_dateValue</code></p>

<h2 class="h5 mt-4">This example is a Time</h2>

<HtmlDateTimePicker DateType="HtmlInputDateType.Time" HeaderText="Label here" DescriptionText="Some more detailed information below!" @bind-Value="@_timeValue"></HtmlDateTimePicker>

<p class="mt-3">The current value is: <code>@_timeValue</code></p>


<h2 class="h5 mt-4">This example is a Month</h2>

<HtmlDateTimePicker DateType="HtmlInputDateType.Month" HeaderText="Label here" DescriptionText="Some more detailed information below!" @bind-Value="@_monthValue"></HtmlDateTimePicker>

<p class="mt-3">The current value is: <code>@_monthValue.Month.ToString("x2")/@_monthValue.Year</code></p>


@code {
    private DateTime _dateTimeValue = DateTime.Now;
    private DateOnly _dateValue = DateOnly.FromDateTime(DateTime.Now);
    private TimeOnly _timeValue = TimeOnly.FromDateTime(DateTime.Now);
    private DateOnly _monthValue = DateOnly.FromDateTime(DateTime.Now);
}
