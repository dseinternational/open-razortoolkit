@page "/html/forms/html-input-email"

<h1>Input Email (Html)</h1>


    <HtmlBlock style="margin:2rem 0">
        <HtmlLabel CssStyle="width:6rem">Label</HtmlLabel>
        <HtmlInputEmail @bind-Value="Text"></HtmlInputEmail>
    </HtmlBlock>


<HtmlBlock style="margin:2rem 0">
    <HtmlLabel CssStyle="width:6rem">Input</HtmlLabel>
    <HtmlCode>@Text</HtmlCode>
</HtmlBlock>

<HtmlBlock style="margin:2rem 0">
    <HtmlButton Click="@Clear">Clear</HtmlButton>
</HtmlBlock>

@code {
    public string? Text { get; set; }

    public void Clear()
    {
        Text = string.Empty;
    }
}
