@using HtmlElement = AngleSharp.Html.Dom.HtmlElement
@inherits TestContext

@code {

    [Fact]
    public void ModalBody_ShouldRenderModalBodyClass()
    {
        // Act
        var modalBody = Render(@<ModalBody></ModalBody>).Nodes.First() as HtmlElement;

        // Assert
        Assert.True(modalBody?.ClassList.Contains(BootstrapClasses.ModalBody));
    }

}
